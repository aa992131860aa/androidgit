<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/beijing1"
        android:orientation="horizontal" >

        <ImageView 
            android:id="@+id/img_fanhui"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:src="@drawable/fanhui"
            />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:gravity="center"
            android:text="大明精益生产管理系统"
            android:textSize="45sp" />

        <TextView 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Daming Lean Production System"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:gravity="center"
            />
        </LinearLayout>
    </LinearLayout>
     <TextView 
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#C0C0C0"
                />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
          android:background="#8686FF"
        android:orientation="horizontal"
        >
         <TextView 
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:background="#C0C0C0"
                />
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            
            >

            <Button
                android:id="@+id/tuzhi"
                android:layout_width="446dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginTop="85dp"
                android:background="@drawable/beijing"
                android:text="图纸文件(Drawing)"
                android:textColor="#000000"
                android:textSize="30sp" />

            </LinearLayout>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#C0C0C0"
                />
            <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            
            >
             <Button
                 android:id="@+id/zuoye"
                android:layout_width="446dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginTop="85dp"
                android:background="@drawable/beijing"
                android:text="作业指导(Work instruction)"
                android:textColor="#000000"
                android:textSize="30sp" />
            </LinearLayout>
             <TextView 
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#C0C0C0"
                />
             <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            
            >
             <Button
                 android:id="@+id/jianyan"
                android:layout_width="446dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginTop="85dp"
                android:background="@drawable/beijing"
                android:text="检验记录(Inspection report)"
                android:textColor="#000000"
                android:textSize="30sp" />
            </LinearLayout>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#C0C0C0"
                />
        </LinearLayout>
        <TextView 
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:background="#C0C0C0"
                />
          <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            
            >
             <Button
                 android:id="@+id/zhiliang"
                android:layout_width="446dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginTop="85dp"
                android:background="@drawable/beijing"
                android:text="质量分析(Quality analysis)"
                android:textColor="#000000"
                android:textSize="30sp" />
            </LinearLayout>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#C0C0C0"
                />
            <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            
            >
             <Button
                 android:id="@+id/lishi"
                android:layout_width="446dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginTop="85dp"
                android:background="@drawable/beijing"
                android:text="历史产量(Production records)"
                android:textColor="#000000"
                android:textSize="30sp" />
            </LinearLayout>
            
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#C0C0C0"
                />
             <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            
            >
             <Button
                 android:id="@+id/biaozhun"
                android:layout_width="446dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginTop="85dp"
                android:background="@drawable/beijing"
                android:text="标准作业(Standard work)"
                android:textColor="#000000"
                android:textSize="30sp" />
            </LinearLayout>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#C0C0C0"
                />
        </LinearLayout>
         <TextView 
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:background="#C0C0C0"
                />
    </LinearLayout>

</LinearLayout>
